<h4>Welcome, <%= current_user.username %>!</h4>
<h4>Here is a list of your characters:</h4>

<div>
    <% @characters.each do |n|%>
        <div class="list-group">
            <a href=<%="/character/#{n.id}"%> class="list-group-item list-group-item-action list-group-item-secondary" style="width: 200px;"><%= n.name.capitalize %></a>
        </div>
    <% end %>
</div>
<br>
<form method="get" action="/logout">
    <input class="btn btn-primary" type="submit" value="Logout">
</form>

