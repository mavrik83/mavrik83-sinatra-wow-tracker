<h4>Add New Character</h4>
<div>
  <form action="/add_character" method="post">
    <div class="form-group">
      <label for="formGroupExampleInput1">Character Name:</label>
      <input type="text" class="form-control" id="formGroupExampleInput1" name="name" placeholder="Character Name" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Intellect:</label>
      <input type="number" class="form-control" id="formGroupExampleInput2" name="intellect" placeholder="Intellect" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput3">Strength:</label>
      <input type="number" class="form-control" id="formGroupExampleInput3" name="strength" placeholder="Strength" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput4">Stamina:</label>
      <input type="number" class="form-control" id="formGroupExampleInput4" name="stamina" placeholder="Stamina" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput5">Agility:</label>
      <input type="number" class="form-control" id="formGroupExampleInput5" name="agility" placeholder="Agility" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput6">Haste:</label>
      <input type="number" class="form-control" id="formGroupExampleInput6" name="haste" placeholder="Haste" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput7">Versatility:</label>
      <input type="number" class="form-control" id="formGroupExampleInput7" name="versatility" placeholder="Versatility" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput8">Mastery:</label>
      <input type="number" class="form-control" id="formGroupExampleInput8" name="mastery" placeholder="Mastery" style="width: 200px;">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput9">Crit Chance:</label>
      <input type="number" class="form-control" id="formGroupExampleInput9" name="crit_chance" placeholder="Crit Chance" style="width: 200px;">
    </div>
    <input class="btn btn-dark" type="submit">
  </form>
</div>
