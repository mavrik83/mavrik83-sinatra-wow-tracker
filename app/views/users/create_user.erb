<h3>Sign Up</h3>


<form action="/signup" method="POST">
  <div class="form-group">
    <label for="formGroupExampleInput">Name:</label>
    <input required type="text" class="form-control" id="formGroupExampleInput" name="username" placeholder="choose a username" style="width: 200px;">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Email:</label>
    <input required type="email" class="form-control" id="formGroupExampleInput2" name="email" placeholder="email" style="width: 200px;">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput3">Password:</label>
    <input  required type="password" class="form-control" id="formGroupExampleInput3" name="password" placeholder="********" style="width: 200px;">
  </div>
  <input class="btn btn-dark" type="submit">
</form>